<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="wrap_content"
    android:background="#B5BFF4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cdv1"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:cardBackgroundColor="#0030AA">

        <ImageView

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/shoppingcart" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Shopping List"
            android:textColor="@color/Azure"
            android:textSize="25dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:cardBackgroundColor="#B5BFF4"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:background="#0030AA"
                    android:gravity="center"
                    android:text="Your Item"
                    android:textColor="@color/white"
                    android:textSize="25dp"></TextView>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                tools:ignore="ExtraText">

                <TextView
                    android:layout_width="@dimen/tx50"
                    android:layout_height="@dimen/tx50"
                    android:layout_margin="8dp"
                    android:background="@drawable/edt_txtv"
                    android:padding="9dp"
                    android:text="IN"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </TextView>

                <EditText
                    android:id="@+id/uitname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/edt_textbc"
                    android:hint="Name"
                    android:padding="9dp"
                    android:textSize="20dp">

                </EditText>>

            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="@dimen/tx50"
                    android:layout_height="@dimen/tx50"
                    android:layout_margin="8dp"
                    android:background="@drawable/edt_txtv"
                    android:padding="9dp"
                    android:text="Q"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </TextView>

                <EditText
                    android:id="@+id/uquantity"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/edt_textbc"
                    android:hint="Quantity"
                    android:inputType="number"
                    android:padding="9dp"
                    android:textSize="20dp">

                </EditText>>

            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="@dimen/tx50"
                    android:layout_height="@dimen/tx50"
                    android:layout_margin="8dp"
                    android:background="@drawable/edt_txtv"
                    android:padding="9dp"
                    android:text="P"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </TextView>

                <EditText
                    android:id="@+id/uprice"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/edt_textbc"
                    android:hint="Price"
                    android:inputType="numberDecimal"
                    android:padding="9dp"
                    android:textSize="20dp">

                </EditText>>

            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="@dimen/tx50"
                    android:layout_height="@dimen/tx50"
                    android:layout_margin="8dp"
                    android:background="@drawable/edt_txtv"
                    android:padding="9dp"
                    android:text="D"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </TextView>

                <EditText
                    android:id="@+id/udate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/edt_textbc"
                    android:hint="Date"
                    android:inputType="datetime"
                    android:padding="9dp"
                    android:textSize="20dp">

                </EditText>>

            </LinearLayout>


            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnupdtedata"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/teal_700"
                    android:text="Update Data"></Button>
            </LinearLayout>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>