<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent"
    android:background="#B5BFF4">

        <androidx.cardview.widget.CardView
            android:id="@+id/cdv1"
            android:layout_width="410dp"
            android:layout_height="280dp"
            app:cardBackgroundColor="#0030AA">

            <ImageButton
                android:id="@+id/bcarrow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Add"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/purple_700"
                android:src="@drawable/backarrow">
            </ImageButton>

            <ImageView

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/shoppingcart" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Shopping List"
                android:textColor="@color/white"
                android:textSize="25dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="410dp"
            android:layout_height="490dp"
            android:layout_marginTop="230dp"
            app:cardBackgroundColor="#B5BFF4"
            app:cardCornerRadius="@dimen/tx20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/ani"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="#0030AA"
                        android:text="Add Item"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25dp"></TextView>

                </androidx.cardview.widget.CardView>

                <EditText
                    android:id="@+id/edtitname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/edt_textbc"
                    android:hint="Item Name"
                    android:padding="14dp"
                    android:textSize="20dp">

                </EditText>

                <EditText
                    android:id="@+id/quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/edt_textbc"
                    android:hint="Quantity"
                    android:inputType="number"
                    android:padding="14dp"
                    android:textSize="20dp">

                </EditText>

                <EditText
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/edt_textbc"
                    android:hint="Price"
                    android:inputType="number"
                    android:padding="14dp"
                    android:textSize="20dp"/>


                <EditText
                    android:id="@+id/setdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/edt_textbc"
                    android:ems="25"
                    android:textSize="20dp"
                    android:hint="Date"
                    android:inputType="datetime"
                    android:padding="14dp">

                </EditText>

                <Button
                    android:id="@+id/insert_data"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_margin="1dp"
                    android:backgroundTint="#0030AA"
                    android:text="Add"
                    android:textAppearance="?android:textAppearance"
                    android:textSize="25dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
</RelativeLayout>